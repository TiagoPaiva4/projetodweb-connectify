@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="sidebar-nav-item dropdown">
        <a class="sidebar-nav-link dropdown-toggle" href="#" id="userMenuDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fas fa-user-check"></i>
            <span class="sidebar-nav-text">Olá @UserManager.GetUserName(User)!</span>
        </a>
        <ul class="dropdown-menu" aria-labelledby="userMenuDropdown">
            <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Gerir Conta</a></li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="dropdown-item w-100 text-start">Logout</button>
                </form>
            </li>
        </ul>
    </div>
}