@* Define o tipo de dados que esta view espera receber do Controller. Neste caso, um objeto do tipo 'Topic'. *@
@model projetodweb_connectify.Models.Topic

@{
    // Define o título da página que será exibido no separador do browser.
    ViewData["Title"] = "Delete";
}

<h1>Apagar Tópico</h1>

<h3>Tem a certeza que deseja apagar este tópico?</h3>
<div>
    <h4>Dados do Tópico</h4>
    <hr />
    @* 'dl' (Definition List) é usado para exibir os dados do tópico num formato de lista de termos e descrições. *@
    <dl class="row">
        @* Exibe o nome do campo 'IsPersonal'. *@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsPersonal)
        </dt>
        @* Exibe o valor do campo 'IsPersonal' (geralmente 'True' ou 'False'). *@
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsPersonal)
        </dd>
        
        @* Exibe o nome do campo 'IsPrivate'. *@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsPrivate)
        </dt>
        @* Exibe o valor do campo 'IsPrivate'. *@
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsPrivate)
        </dd>
        
        @* Exibe o nome do campo 'Title'. *@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        @* Exibe o valor do campo 'Title'. *@
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        
        @* Exibe o nome do campo 'Description'. *@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        @* Exibe o valor do campo 'Description'. *@
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        
        @* Exibe o nome do campo 'Creator' (Criador). *@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Creator)
        </dt>
        @* Exibe o ID do criador. Nota: O Controller precisa de ter carregado a entidade 'Creator' para isto funcionar. *@
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Creator.Id)
        </dd>
        
        @* Exibe o nome do campo 'CreatedAt' (Data de Criação). *@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        @* Exibe o valor do campo 'CreatedAt'. *@
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
    </dl>
    
    @* O formulário será submetido para a action 'Delete' do Controller para confirmar a remoção do tópico. *@
    <form asp-action="Delete">
        @* 'asp-for="Id"' cria um campo de input oculto (<input type="hidden">) que contém o ID do tópico. *@
        @* Isto é essencial para que o Controller saiba qual tópico deve apagar. *@
        <input type="hidden" asp-for="Id" />
        
        @* Botão que submete o formulário e confirma a ação de apagar. *@
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        
        @* Link para voltar à página de índice (lista de tópicos) sem apagar. *@
        <a asp-action="Index">Voltar à Lista</a>
    </form>
</div>