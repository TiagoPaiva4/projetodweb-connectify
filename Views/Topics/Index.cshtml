@model IEnumerable<projetodweb_connectify.Models.Topic>
@using Microsoft.AspNetCore.Identity 

@{
    ViewData["Title"] = "Tópicos"; // Changed title
}

<h1>@ViewData["Title"]</h1>

<p>
    @if (User.Identity != null && User.Identity.IsAuthenticated) // Only show Create New if logged in
    {
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus-circle"></i> Criar Novo Tópico</a>
    }
    else
    {
        <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Url.Action("Index", "Topics")" class="btn btn-outline-primary">Login para Criar Tópico</a>
    }
</p>

@* Display TempData messages *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @TempData["InfoMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<table class="table table-striped table-hover">
    @* Added some Bootstrap classes *@
    <thead class="table-light">
        @* Light header *@
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.Title) *@
                Título
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Description) *@
                Descrição (início)
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Creator) *@
                Criador
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.CreatedAt) *@
                Data Criação
            </th>
            <th>Ações</th> @* Combined actions header *@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @* Link title to details page *@
                    <a asp-action="Details" asp-route-id="@item.Id"><strong>@Html.DisplayFor(modelItem => item.Title)</strong></a>
                    @if (item.IsPrivate)
                    {
                        <span class="badge bg-secondary ms-1" title="Tópico Privado"><i class="fas fa-lock"></i></span>
                    }
                </td>
                <td>
                    @* Display a snippet of the description *@
                    @Html.Raw(item.Description?.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description ?? "")
                </td>
                <td>
                    @* Display Creator's Name or Username - Fallback to ID if names are null *@
                    @Html.DisplayFor(modelItem => item.Creator.Name)
                    @if (string.IsNullOrEmpty(item.Creator.Name) && item.Creator.User != null)
                    {
                        <span class="text-muted">(@(item.Creator.User.Username))</span>
                    }
                    else if (string.IsNullOrEmpty(item.Creator.Name) && item.Creator.User == null)
                    {
                        <span class="text-danger">(ID: @item.Creator.Id)</span> @* Fallback if data is missing *@
                    }
                </td>
                <td>
                    @item.CreatedAt.ToString("dd/MM/yyyy HH:mm") @* Format date *@
                </td>
                <td>
                    @* --- Action Buttons --- *@
                    <div class="btn-group btn-group-sm" role="group">
                        @* Group buttons *@

                        @* Details Button *@
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" title="Detalhes">
                            <i class="fas fa-info-circle"></i>
                        </a>

                        @* Save Topic Button (Only show if user is logged in) *@
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <form asp-action="SaveTopic" asp-route-id="@item.Id" method="post" style="display:inline;" class="ms-1">
                                @* Added margin start *@
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-success" title="Guardar Tópico">
                                    <i class="fas fa-bookmark"></i> @* Bookmark icon for Save *@
                                </button>
                            </form>
                        }

                        @* Edit & Delete Buttons (Should only show if the current user is the CREATOR) *@
                        @* You'll need to get the current user's Profile ID to compare here *@
                        @* This requires passing the current user's profile ID to the view or doing the check in the controller/service *@
                        @* --- Example (Simplified - Needs current user ProfileId passed in ViewData or ViewModel) --- *@
                        @* @if (User.Identity.IsAuthenticated && ViewData["CurrentUserProfileId"] as int? == item.CreatedBy) *@
                        @* { *@
                        @* <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary ms-1" title="Editar"> *@
                        @*     <i class="fas fa-edit"></i> *@
                        @* </a> *@
                        @* <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" class="ms-1" onsubmit="return confirm('Tem a certeza que quer eliminar este tópico e TODOS os seus posts?');"> *@
                        @*      @Html.AntiForgeryToken() *@
                        @*      <button type="submit" class="btn btn-outline-danger" title="Eliminar"> *@
                        @*          <i class="fas fa-trash"></i> *@
                        @*      </button> *@
                        @* </form> *@
                        @* } *@
                        @* --- End Conditional Edit/Delete --- *@
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@* Add Font Awesome if not already included in _Layout.cshtml *@
@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        /* Optional: Ensure buttons in forms align nicely */
        td .btn-group form button {
            line-height: 1.3; /* Adjust as needed */
        }

        td .btn-group form {
            margin-bottom: 0; /* Remove default form margin */
        }
    </style>
}