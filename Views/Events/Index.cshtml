@model IEnumerable<Event>

@{
    ViewData["Title"] = "Próximos Eventos";
}

@* Bloco de Estilos para dar um toque final aos cartões *@
@section Styles {
    <style>
        .event-card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
            border-radius: 0.75rem; /* Bordas mais arredondadas */
            border: 1px solid #e9ecef;
        }

            .event-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            }

        .event-card-img {
            height: 200px;
            object-fit: cover; /* Garante que a imagem preenche o espaço sem distorcer */
            border-top-left-radius: 0.75rem;
            border-top-right-radius: 0.75rem;
        }

        .card-body {
            display: flex;
            flex-direction: column;
        }

        .card-footer {
            background-color: #ffffff;
            border-top: none; /* Remove a linha de separação do footer */
            padding-top: 0;
        }

        .info-list li {
            color: #6c757d; /* Cor cinza para os detalhes */
            margin-bottom: 0.5rem;
        }

        .info-list i {
            color: #0d6efd; /* Cor primária para os ícones */
            width: 20px; /* Alinha os ícones */
        }
    </style>
}

<!-- Cabeçalho da Página com Título e Botão de Criar -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary btn-lg">
        <i class="fas fa-plus me-2"></i> Criar Novo Evento
    </a>
</div>

<!-- Grelha de Eventos -->
<div class="row">
    @if (!Model.Any())
    {
        <div class="col-12 text-center mt-5">
            <i class="fas fa-calendar-times fa-4x text-muted mb-3"></i>
            <h4>Ainda não há eventos.</h4>
            <p class="text-muted">Seja o primeiro a criar um!</p>
        </div>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 event-card shadow-sm">
                    <!-- Imagem do Evento (com um placeholder se não existir) -->
                    <img src="@(string.IsNullOrEmpty(item.EventImageUrl) ? "https://placehold.co/600x400/007bff/FFFFFF?text=Evento" : item.EventImageUrl)"
                         class="card-img-top event-card-img" alt="@item.Title">

                    <div class="card-body">
                        <!-- Título do Evento -->
                        <h5 class="card-title">@item.Title</h5>

                        <!-- Lista de Informações com Ícones -->
                        <ul class="list-unstyled mt-3 mb-4 info-list">
                            <li>
                                <i class="fas fa-calendar-alt me-2"></i>
                                @item.StartDateTime.ToString("g") <!-- Formato: dd/mm/aaaa hh:mm -->
                            </li>
                            <li>
                                <i class="fas fa-map-marker-alt me-2"></i>
                                @(string.IsNullOrEmpty(item.Location) ? "Local a definir" : item.Location)
                            </li>
                            <li>
                                <i class="fas fa-user me-2"></i>
                                Criado por <strong>@item.Creator.Username</strong>
                            </li>
                        </ul>

                        <!-- Botões de Ação no Fundo do Cartão -->
                        <div class="mt-auto">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary w-100">Ver Detalhes</a>
                        </div>
                    </div>

                    <div class="card-footer text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-secondary me-3">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">Apagar</a>
                    </div>
                </div>
            </div>
        }
    }
</div>