@model IEnumerable<Event>

@{
    ViewData["Title"] = "Eventos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <!-- BOTÃO PARA CRIAR UM NOVO EVENTO -->
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Criar Novo Evento
    </a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                Criador
            </th>
            <th></th> <!-- Coluna para os botões de ação -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @item.StartDateTime.ToShortDateString() @item.StartDateTime.ToShortTimeString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    <!-- Assumindo que a propriedade Creator.Username existe e foi carregada -->
                    @Html.DisplayFor(modelItem => item.Creator.Username)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>