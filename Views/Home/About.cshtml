<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header bg-light text-center py-4">
                    <img src="~/images/logo.png" alt="Connectify Logo" style="max-height: 60px; margin-bottom: 1rem;" />
                    <h1 class="h2">@ViewData["Title"]</h1>
                    <p class="lead text-muted">Detalhes do projeto Connectify</p>
                </div>
                <div class="card-body p-4 p-md-5">

                    <!-- Seção 1: Detalhes do Curso -->
                    <section class="mb-5">
                        <h3 class="section-title">Informação Académica</h3>
                        <ul class="list-group list-group-flush">
