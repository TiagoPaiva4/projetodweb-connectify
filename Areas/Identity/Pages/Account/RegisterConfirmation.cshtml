@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmação de Registo";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Connectify</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        :root {
            --color-background: #f8f9fa;
            --color-primary-dark: #1D3461;
            --color-primary-medium: #376996;
            --color-text-on-dark: #ffffff;
            --color-text-light: #6c757d;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background-color: var(--color-background);
        }

        .login-container {
            display: flex;
            min-height: 100vh;
        }

        .login-form-container {
            flex: 0 0 45%;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 3rem;
            text-align: center;
        }

        .login-form-content {
            max-width: 420px; /* Um pouco mais de espaço para o texto */
            width: 100%;
        }

        .login-logo {
            display: block;
            max-width: 200px;
            margin: 0 auto 3rem auto;
        }

        .login-image-container {
            flex: 1;
            background-image: url('/images/banner.png');
            background-size: cover;
            background-position: center;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
        }

        .image-overlay-logo {
            max-width: 35%;
            opacity: 0.9;
        }

        /* Estilos para o painel de confirmação */
        .status-icon {
            color: var(--color-primary-medium);
            width: 80px;
            height: 80px;
            margin-bottom: 2rem;
        }

        .status-title {
            font-size: 2rem;
            font-weight: 600;
            color: var(--color-primary-dark);
            margin-bottom: 1rem;
        }

        .status-text {
            font-size: 1.1rem;
            color: #495057;
            margin-bottom: 2.5rem;
            line-height: 1.6;
        }

        /* Estilo para a nota de desenvolvimento */
        .dev-note {
            margin-top: 2rem;
            padding: 1rem;
            border: 1px dashed var(--color-text-light);
            border-radius: 8px;
            background-color: #fff;
            font-size: 0.9rem;
            text-align: left;
        }

            .dev-note strong {
                display: block;
                margin-bottom: 0.5rem;
            }

            .dev-note a {
                word-break: break-all; /* Para que links longos não quebrem o layout */
            }

        .home-link {
            display: block;
            margin-top: 2rem;
            color: var(--color-text-light);
        }

        @@media (max-width: 992px) {
            .login-image-container {
                display: none;
            }

            .login-form-container {
                flex: 0 0 100%;
            }
        }
    </style>
</head>
<body>

    <div class="login-container">
        <div class="login-form-container">
            <div class="login-form-content">


                <!-- Ícone de avião de papel a indicar "email enviado" -->
                <svg class="status-icon" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576 6.636 10.07Zm6.787-8.201L1.591 6.602l4.339 2.76 7.494-7.493Z" />
                </svg>

                <h1 class="status-title">Verifique o seu Email</h1>
                <p class="status-text">
                    Registo concluído! Enviámos um link de confirmação para o seu email: <strong>@Model.Email</strong>.
                    <br>
                    Por favor, verifique a sua caixa de entrada (e a pasta de spam) para ativar a sua conta.
                </p>

                @if (Model.DisplayConfirmAccountLink)
                {
                    <div class="dev-note">
                        <strong>Nota para o Desenvolvedor:</strong>
                        <p class="mb-0">
                            Como não há um serviço de email configurado, pode confirmar a conta clicando no link direto:
                            <a id="confirm-link" href="@Model.EmailConfirmationUrl">Confirmar Conta</a>
                        </p>
                    </div>
                }

                <a asp-page="/Home/Index" class="home-link">Voltar à Página Principal</a>

            </div>
        </div>
        <div class="login-image-container">

        </div>
    </div>

</body>
</html>